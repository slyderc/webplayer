# Prevent direct access to the dashboard without proper authentication
<FilesMatch "analytics_dashboard\.php$">
    # Only allow access when correct key parameter is provided
    RewriteEngine On
    RewriteCond %{QUERY_STRING} !key=admin123
    RewriteRule ^ - [F]
</FilesMatch>

# Disable directory listing
Options -Indexes

# Allow API access for the webplayer client
<FilesMatch "track_analytics\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>